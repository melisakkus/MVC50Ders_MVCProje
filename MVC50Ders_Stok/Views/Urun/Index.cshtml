@using MVC50Ders_Stok.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Ad</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <th>@urun.UrunId</th>
                <td>@urun.UrunAd</td>
                <td>@urun.UrunMarka</td>
                <td>@urun.Tbl_Kategoriler.KategoriAd</td>
                <td>@urun.UrunFiyat</td>
                <td>@urun.UrunStok</td>
                @*<td> <a href="/Urun/UrunSil/@urun.UrunId" class="btn btn-danger">SİL</a></td>*@
                <td>@Html.ActionLink("Sil", "UrunSil", new { id = urun.UrunId }, new { @class = "btn btn-warning", onclick = "return confirm ('Silmek istediğinize emin misiniz?')" })</td>
                <td> <a href="/Urun/UrunGetir/@urun.UrunId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/YeniUrun" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script>
    $('#tbl1').DataTable();
</script>