@using MVC50Ders_Stok.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>Ürün Id</th>
        <th>Ürün Ad</th>
        <th>Marka</th>
        <th>Kategori</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Sil</th>  
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach(var urun in Model)
            {
                <tr>
                    <th>@urun.UrunId</th>
                    <td>@urun.UrunAd</td>
                    <td>@urun.UrunMarka</td>
                    <td>@urun.UrunKategori</td>
                    <td>@urun.UrunFiyat</td>
                    <td>@urun.UrunStok</td>
                    <td> <a href="/Urun/Sil/@urun.UrunId" class="btn btn-danger">SİL</a></td>
                    <td> <a href="/Urun/Guncelle/@urun.UrunId" class="btn btn-success">GÜNCELLE</a></td>
                </tr>
            }
    </tbody>
</table>
<a href="/Urun/YeniUrun" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
