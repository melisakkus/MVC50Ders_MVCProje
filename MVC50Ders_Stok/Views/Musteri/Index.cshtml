@using MVC50Ders_Stok.Models.Entity
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı : @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}


<table class="table table-bordered">
    <tr>
        <th>Musteri Id</th>
        <th>Musteri Ad</th>
        <th>Musteri Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MusteriId</th>
                <td>@musteri.MusteriAd</td>
                <td>@musteri.MusteriSoyad</td>
                @*<td><a href="/Musteri/MusteriSil/@musteri.MusteriId" class="btn btn-danger">SİL</a></td>*@
                <td>@Html.ActionLink("Sil", "MusteriSil", new { id = musteri.MusteriId }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
                <td> <a href="/Musteri/MusteriGetir/@musteri.MusteriId" class="btn btn-success">GÜNCELLE</a></td>

            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>